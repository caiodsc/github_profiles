<div class="mx-auto md:w-2/3 w-full flex flex-col items-center">
  <div class="mb-5">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= @user.completed? ? render(@user) : render('unprocessed_user') %>

    <div class="flex flex-wrap justify-center gap-2 mt-2">
      <%= link_to "Edit this user", edit_user_path(@user), class: "rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
      <%= link_to "Back to users", users_path, class: "rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
      <%= button_to "Reprocess", reprocess_user_path(@user), method: :post, class: "rounded-lg py-3 px-5 bg-blue-500 text-white font-medium" %>
      <%= button_to "Destroy", @user, method: :delete, class: "rounded-lg py-3 px-5 bg-red-500 text-white font-medium" %>
    </div>
  </div>
</div>
